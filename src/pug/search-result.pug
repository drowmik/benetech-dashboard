extends includes/base.pug

block variables
    - var title = "Search Result";

block content
    #filter-options.bg-primary.row
        form.col-12(action="#")
            .position-relative
                .row
                    .col-xl-6
                        .row
                            .col-md-3
                                .form-group
                                    label Patient Code
                                    input.form-control.cross-on-type(type="text", name="patient-code")
                            .col-md-3
                                .form-group
                                    label Second Name
                                    input.form-control.cross-on-type(type="text", name="second-name")
                            .col-md-3
                                .form-group
                                    label First Name
                                    input.form-control.cross-on-type(type="text", name="first-name")
                            .col-md-3
                                .form-group
                                    label Birth Date
                                    input.form-control.jqui-datepicker(type="text", name="birth-date", autocomplete="off")
                    .col-xl-6
                        .row
                            .col-md-3
                                .form-group
                                    label Panels
                                    input.form-control.cross-on-type(type="text", name="panels")
                            .col-md-3
                                .form-group
                                    label Specimen
                                    input.form-control.cross-on-type(type="text", name="specimen")
                            .col-md-3
                                .form-group
                                    label Work Code
                                    input.form-control.cross-on-type(type="text", name="work-code")
                            .col-md-3
                                .form-group
                                    label Requisition Status
                                    select.form-control(name="requisition")
                                        option All
                                        option Yes
                                        option No
                    .col-xl-6(style="display:none")
                        #advanced-options
                            .row
                                .col-md-3
                                    .form-group
                                        label Worklist
                                        input.form-control.cross-on-type(type="text", name="worklist")
                                .col-md-3
                                    .form-group
                                        label Advanced Date Search
                                        select.form-control(name="advance-date-search")
                                            option Specimen Date
                                            option Yes Date
                                            option No Date
                                .col-md-3
                                    .form-group
                                        label Start Date (from)
                                        select.form-control(name="start-date")
                                            option 05-05-05
                                            option 05-05-06
                                            option 05-05-07
                                .col-md-3
                                    .form-group
                                        label End Date (to)
                                        select.form-control(name="end-date")
                                            option 05-05-05
                                            option 05-05-06
                                            option 05-05-07

                .position-absolute.w-100.d-flex.justify-content-between#filter-extra-btns
                    a.btn.btn-info.bt-btn#filter-show-adv-search(href="#") Show Advanced Search
                    .d-flex
                        a.btn.btn-info.bt-btn.mr-3(href="#") New Search
                        button.btn.btn-warning.bt-btn(type="submit") Search

    #search-content.px-3.mb-5
        .mt-5.heading
            h2.d-inline-block Search Patient:
            span 333 333 results

        #search-table-wrapper
            table.table.table-responsive.table-striped.bg-white.text-center
                thead.thead-primary.text-left
                    tr
                        th(scope='col') Pat.Code
                        th(scope='col') Last Name
                        th(scope='col') First Name
                        th(scope='col') DOB
                        th(scope='col') LMP
                        th(scope='col') Panel
                        th(scope='col') Status
                        th(scope='col') Spec.Date
                        th(scope='col') Specimen
                        th(scope='col') Work Code
                        th(scope='col') Worklist
                tbody
                    -for(i = 0; i < 12; i++)
                        tr
                            td PCODE_1000
                            td Kamalidadadad
                            td Anastas
                            td 05-05-05
                            td 05-05-05
                            td MS QUAD
                            td Inclomplete
                            td 05-05-05
                            td 05050500
                            td WC_3333
                            td 19819389-MO-1
                    tr
                        td(colspan="11")
                            .d-flex.justify-content-end#search-pagination
                                nav(aria-label='Pagination')
                                    ul.pagination
                                        li.page-item.disabled
                                            a.page-link(href='#')
                                                span.sr-only prev
                                        li.page-item.active
                                            span.page-link 1
                                        li.page-item
                                            a.page-link(href='#') 2
                                        li.page-item
                                            a.page-link(href='#') 3
                                        li.page-item
                                            span.page-link ...
                                        li.page-item
                                            a.page-link(href='#') 23
                                        li.page-item
                                            a.page-link(href='#')
                                                span.sr-only next


